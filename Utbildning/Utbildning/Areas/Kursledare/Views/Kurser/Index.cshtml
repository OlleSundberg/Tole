@model IEnumerable<Utbildning.Models.Course>

@{
    ViewBag.Title = "Kursvy";
}

<h2>Dina kurser</h2>

<p>
    <a href="~/Kursledare/Kurser/Skapa">Skapa Ny Kurs</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length) @(item.Length == 1 || item.Length == -1 ? "dag" : "dagar")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Översikt", "Kurs", new { param1 = item.Id }) |
                @Html.ActionLink("Kurstillfällen", "Kurs", new { param1 = "Kurstillfällen", param2 = item.Id }) |
                @Html.ActionLink("Redigera", "Kurs", new { param1 = "Redigera", param2 = item.Id }) |
                @Html.ActionLink("Radera", "Kurs", new { param1 = "Radera", param2 = item.Id })
            </td>
        </tr>
    }
</table>
<a href="~/Kursledare/">← Tillbaka</a>