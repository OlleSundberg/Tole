@model Utbildning.Models.ChangeFullNameViewModel

<body style="margin: auto; text-align: center;">
    <h4>Ändra namn</h4>
    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div style="display: flex;">
            <div class="form-group" style="margin: auto; text-align: center">
                @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
                <div class="">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", Value = ViewBag.FullName })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Spara" />
        </div>
    }
</body>